        <activity android:name=".intentdatapass.FirstActivity" />
        <activity android:name=".intentdatapass.SecondActivity" />
        <activity android:name=".sheared.ShowDataActivity" />
        <activity android:name=".sheared.NameActivity" />
        <activity android:name=".sheared.PhoneNumberActivity" />
        <activity android:name=".sheared.AdressActivity" />
        <activity android:name=".tabview.TabActivity" />
        <activity android:name=".ListActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".FragmentActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>